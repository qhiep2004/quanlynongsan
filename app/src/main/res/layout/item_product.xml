<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <ImageView
                android:id="@+id/imgProduct"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvBadgeOrganic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hữu cơ"
                    android:background="@drawable/badge_organic"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="3dp"
                    android:layout_margin="8dp"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tvBadgeLocal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Địa phương"
                    android:background="@drawable/badge_local"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="3dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="8dp"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ivFavorite"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="8dp"
                android:layout_gravity="top|end"
                android:layout_margin="4dp"
                android:src="@drawable/ic_favorite_border"
                android:background="@drawable/circle_white_background"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/tvOrigin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đà Lạt"
                android:textSize="11sp"
                android:drawableStart="@drawable/ic_location_small"
                android:drawablePadding="2dp"
                android:textColor="@color/secondary" />

            <TextView
                android:id="@+id/tvProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="Cà chua hữu cơ"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:textSize="15sp"
                android:textColor="@color/text_primary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="90.000đ/kg"
                    android:textColor="@color/price_color"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/kg"
                    android:textSize="12sp"
                    android:layout_gravity="bottom"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvHarvestDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thu hoạch: 20/05/2024"
                android:textSize="11sp"
                android:drawableStart="@drawable/ic_calendar_small"
                android:drawablePadding="2dp"
                android:layout_marginTop="4dp"
                android:textColor="@color/text_secondary" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>