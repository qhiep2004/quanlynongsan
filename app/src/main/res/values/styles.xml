<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent1</item>
<!--        <item name="android:fontFamily">@font/roboto</item>-->
    </style>

    <style name="ShapeAppearanceOverlay.App.TopRounded" parent="">
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
    </style>

    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
    </style>


    <style name="AppButton.Primary">
        <item name="backgroundTint">@color/primary</item>
    </style>


    <style name="AppButton.Danger">
        <item name="backgroundTint">@color/danger</item>
    </style>


    <style name="ProductCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">0dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>


    <style name="ProductTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="ProductPrice">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/accent1</item>
    </style>
</resources>